<?xml version="1.0" encoding="UTF-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<TabHost   
    android:id="@android:id/tabhost"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent" >  
  
    <LinearLayout  
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent"  
        android:background="@drawable/background"  
        android:orientation="vertical" >  
  
        <FrameLayout  
            android:id="@android:id/tabcontent"  
            android:layout_width="fill_parent"  
            android:layout_height="0.0dip"  
            android:layout_weight="1.0" />  
  
        <TabWidget  
            android:id="@android:id/tabs"  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:layout_weight="0.0"  
            android:visibility="gone" />  
  
        <FrameLayout  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content" >  
  
            <RadioGroup  
                android:id="@+id/main_tab_group"  
                android:layout_width="fill_parent"  
                android:layout_height="wrap_content"  
                android:layout_gravity="bottom" 
                android:gravity="bottom"
                android:orientation="horizontal" 
                android:background="@drawable/icons_menubg" 
                 >

                <RadioButton
                    android:id="@+id/menu_applist"
                    style="@style/MMTabButton"
                    android:layout_weight="1.0"
                    android:drawableTop="@drawable/bg_applist_menu"
                    android:text="Applist"
                    android:button="@null"
                    android:checked="true"
                    />
  
                <RadioButton  
                    android:id="@+id/menu_encrypt" 
                    android:layout_weight="1.0"  
                    style="@style/MMTabButton"    
                    android:drawableTop="@drawable/bg_encrypt_menu" 
                    android:text="Encrypt"   
                    android:button="@null"
                    />  
  
                <RadioButton  
                    android:id="@+id/menu_hide"
                    android:layout_weight="1.0"
                    style="@style/MMTabButton"
                    android:drawableTop="@drawable/bg_hide_menu"
                    android:text="Hide" 
                    android:button="@null"  />  
  
                <RadioButton  
                    android:id="@+id/menu_classify"
                    android:layout_weight="1.0"  
                    style="@style/MMTabButton"
                    android:drawableTop="@drawable/bg_classify_menu"
                    android:text="Classify"
                    android:button="@null" />  
  
                <RadioButton  
                    android:id="@+id/menu_about" 
                    android:layout_weight="1.0"     
                    style="@style/MMTabButton"
                    android:drawableTop="@drawable/bg_about_menu"
                    android:text="about" 
                    android:button="@null"  />  
            </RadioGroup>  
 
        </FrameLayout>  
    </LinearLayout>  
    
</TabHost>  

    </RelativeLayout>
 